{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard"
  ],
  "plugins": ["react", "jsx-a11y", "import", "prettier", "eslint-plugin-react"],
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true, "parser": "flow" }],
    "react/no-unused-prop-types": "off",
    "react/prop-types": "error",
    "react/jsx-filename-extension": "off",
    "react/sort-comp": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "no-console": "off"
  }
}
